<Window x:Class="UNO.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="100" Width="200" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterOwner" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <PasswordBox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Name="textboxPwd"
                     Grid.Row ="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="2,2,2,2" FontSize="22" KeyUp="textboxPwd_KeyUp" />
        <Button Content="OK" Grid.Row="1" Grid.Column="0" Height="30" Margin="2,0,2,2" 
                Click="Button_OK_Click"></Button>
        <Button Content="Cancel" Grid.Row="1" Grid.Column="1" Height="30" Margin="2,0,2,2" 
                Click="Button_Cancel_Click"></Button>
    </Grid>
</Window>
